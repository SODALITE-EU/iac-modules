[Unit]
Description=Node Exporter
Wants=network-online.target
After=network-online.target

[Service]
User=node_exporter
Group=node_exporter
Type=simple
ExecStart=/usr/local/bin/node_exporter --group-name-label={{ deployment_label }} --instance-id-label={{ instance_id }}

[Install]
WantedBy=multi-user.target