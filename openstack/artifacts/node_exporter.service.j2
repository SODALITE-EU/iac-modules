[Unit]
Description=Node Exporter
Wants=network-online.target
After=network-online.target

[Service]
User=node_exporter
Group=node_exporter
Type=simple
ExecStart=/usr/local/bin/node_exporter --collector.group-name-label={{ deployment_label }} --collector.instance-name-label={{ node_name }}

[Install]
WantedBy=multi-user.target